<% provide(:title, "Cars") %>

<h3> Cars </h3>

<% @cars.each do |car| %>

  <p><%= link_to car.name, car %></p>
  <p><%= car.about %></p>
  <p>Klasa: <%= car.comfort %></p>
  <p>
    <%= link_to "Edit", edit_car_path(car) %> |
    <%= link_to "Delete", car, :method => :delete, :confirm => "Are you sure?" %>
  </p>
  <hr />
  
 
<% end %>

<p><%= link_to "Add new car", new_car_path, class: "btn btn-success" %></p>