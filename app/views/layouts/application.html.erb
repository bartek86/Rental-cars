<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Car Rental Application</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top navbar-inverse">
  <div class ="container">
    <h1 class = "logo" >Car rental support application</h1>
    <nav>
       <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, class: "btn btn-success" %></li>
        <% if user_signed_in? %>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-success" %></li>
        <% end %>
      </ul>
    </nav>
  </div>  
</div>
  
<div class="center jumbotron">
  
  <% flash.each do |key,value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
